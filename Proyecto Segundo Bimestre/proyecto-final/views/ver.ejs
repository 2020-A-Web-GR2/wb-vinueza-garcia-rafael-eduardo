<%- include ('compartido/cabecera-html') %>
<%- include ('compartido/menu_principal') %>

<br><br>

<div class="container">
    <div class="centrado">
        <img src="<%= videojuego.urlImagen %>" alt="imagen_videojuego" width="600" height="400">
    </div>
    <br>
    <p class="tamanio-26  centrado"><%= videojuego.nombre %></p>
    <br>

    <div>
        <div class="form-group row">
            <label for="fecha-lanzamiento-ver" class="col-sm-9 col-form-label azul-claro tamanio-24">Fecha de
                Lanzamiento: </label>
            <div class="col-sm-3">
                <input type="text" readonly class="form-control-plaintext azul-claro tamanio-24"
                       id="fecha-lanzamiento-ver" value="<%= videojuego.fechaLanzamiento %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="genero-ver" class="col-sm-9 col-form-label azul-claro tamanio-24">Genero: </label>
            <div class="col-sm-3">
                <input type="text" readonly class="form-control-plaintext azul-claro tamanio-24" id="genero-ver"
                       value="<%= genero.descripcion %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="edad-minima-ver" class="col-sm-9 col-form-label azul-claro tamanio-24">Edad Minima: </label>
            <div class="col-sm-3">
                <input type="text" readonly class="form-control-plaintext azul-claro tamanio-24" id="edad-minima-ver"
                       value="<%= videojuego.edadMinima %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="desarrolladora-ver" class="col-sm-9 col-form-label azul-claro tamanio-24">Empresa
                Desarrolladora: </label>
            <div class="col-sm-3">
                <input type="text" readonly class="form-control-plaintext azul-claro tamanio-24" id="desarrolladora-ver"
                       value="<%= desarrolladora.nombre %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="precio-ver" class="col-sm-9 col-form-label azul-claro tamanio-24">Precio: </label>
            <div class="col-sm-3">
                <input type="text" readonly class="form-control-plaintext azul-claro tamanio-24" id="precio-ver"
                       value="$<%= videojuego.precio %>">
            </div>
        </div>
    </div>
    <br>
    <div class="form-group row">
        <% if(!comprado){ %>
            <a class="btn btn-primary color-boton tamanio-24 col-sm-4" href="/carrito-compras?adicionar=<%= videojuego.id %>" role="button">AÃ±adir al Carrito</a>
            <div class="col-sm-4">&nbsp;</div>
            <a class="btn btn-primary color-boton tamanio-24 col-sm-4" href="/tienda" role="button">Regresar a la tienda</a>
        <% } %>
    </div>
    <br>
</div>

<% if(comprado){ %>
    <div class="azul-claro align-content-center centrado">
        <p class="centrado tamanio-20">Usted ya posee este videojuego</p>
        <br>
        <a class="centrado btn btn-primary color-boton tamanio-24" href="/tienda" role="button">Regresar a la tienda</a>
    </div>
    <br>
<% } %>

