<%- include ('../compartido/menu/menu-component')%>

<h1>Inicio</h1>

<% const rafael = {nombre:"Rafael", apellido:"Vinueza", cedula:"1727148159"} %>

<p><%= rafael.nombre%> <%=rafael.apellido%></p>

<%const arregloNumeros = [1,2,3,4,5]%>


<a href="/usuario/vista/crear">
    <button>Crear</button>
</a>

<% if(typeof parametrosConsulta != 'undefined'){%>
    <p>MENSAJE: <%= parametrosConsulta.mensaje%></p>
<%}%>

<form action="/usuario/vista/inicio" method="GET">
    <label for="busqueda">Busqueda: </label>
    <input id="busqueda" type="text" name="busqueda">
    <button type="submit"> Buscar</button>
</form>

<table>
    <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cedula</th>
        <th>Acciones</th>
    </tr>

    <% arregloUsuarios.forEach((objeto)=>{%>
        <tr>
            <td><%=objeto.nombre%></td>
            <td><%=objeto.apellido%></td>
            <td><%=objeto.cedula%></td>
            <td>
                <button>Ver</button>
                <a href="/usuario/vista/editar/<%= objeto.id%>">
                    <button>Editar</button>
                </a>
                <form action="/usuario/eliminarDesdeVista/<%= objeto.id %>" method="POST">
                    <button type="submit">Eliminar</button>
                </form>

            </td>
        </tr>
    <%})%>

</table>

